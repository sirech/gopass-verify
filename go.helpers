#!/bin/bash

set -o errexit
set -o pipefail

CHECK="\\xe2\\x98\\x91"
CROSS="\\xe2\\x98\\x92"

RED='\033[0;31m'
END='\033[0m'
GREEN='\033[0;32m'

echo_time() {
  echo -e "[$(date)] $*"
}

echo_check() {
  echo -e "$GREEN $CHECK $* $END"
}

echo_error() {
  echo -e "$RED $CROSS $* $END"
}

echob() {
  echo -e "\\033[1m$*\\033[0m"
}

# checks is a tool is working
check() {
  if ! type "$1" > /dev/null 2>&1; then
    echo_error "$2"
    exit 1
  else
    echo_check "$3"
  fi
}
